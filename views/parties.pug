html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title='Shape tomorrow by voting!'
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css")
        link(href="https://fonts.googleapis.com/css?family=Lato:400,700|Ubuntu:400,500,700" rel="stylesheet")
        link(rel="shortcut icon" type="image/png" href="/images/favicon.png" sizes="54 54")
        link(rel="stylesheet" href="/stylesheets/base.css")
        link(rel="stylesheet" href="/stylesheets/layout.css")
        link(rel="stylesheet" href="/stylesheets/components.css")
        link(rel="stylesheet" href="/stylesheets/home.css")

    body.bg-dark
        div.container
            // navigation bar
            nav.nav
                a.nav-icon(href="/")
                    img(src="/images/politico.svg" alt="Politico")
                    p.icon-text Politico

                div.menu
                    a.link-item(href="/parties") parties
                    a.link-item(href="/politicians") politicians
                    a.link-item(href="/availableoffices") offices
                    a.link-item(href="/results") results
                    a.link-item(href="/admin") admin
                    a.link-item(href="/profile") profile
                    button.btn.link-item(href="/admin") logout

                button.dropdown-trigger
                    img.dropdown-trigger-img(src="/images/profile.jpg")

                div.dropdown
                    div.user-info
                        img.user-image(src="/images/profile.jpg")
                        p.user-name avpaul

                    ul.dropdown-menu.mobile
                        li.menu-item
                            a.link-item(href="/profile") my profile & votes

                        li.menu-item
                            a.link-item(href="/parties") parties

                        li.menu-item
                            a.link-item(href="/availableoffices") available offices

                        li.menu-item
                            a.link-item(href="/politicians") running politicians

                        li.menu-item
                            a.link-item(href="/results") election results

                        li.menu-item
                            a.link-item(href="/admin") admin panel

                        li.menu-item
                            button.btn.link-item(href="/admin") logout

            .jumbotron
                h2.w-n.color-accent.mb1 Political parties
                select#office-type.field-input(name="office")
                    option(value="") Choose Office
                    option(value="city-mayor") City Mayor
                    option(value="ict-office") Head Of ICT
                    option(value="accountant") Accountant

            .all-candidates
                div.card.card-overlay
                    .card-image
                        img(src="/images/p2.jpg" alt="Mulinda Thomas")
                    a.overlay-content.p1.bg-accent(href="/parties/3")
                        p.party-name.text-uppercase dc for union

                div.card.card-overlay
                    .card-image
                        img(src="/images/p1.jpg" alt="Mulinda Thomas")
                    a.overlay-content.p1.bg-accent(href="/parties/3")
                        p.party-name.text-uppercase green party

                div.card.card-overlay
                    .card-image
                        img(src="/images/p3.jpg" alt="Mulinda Thomas")
